<h1 class="title">ユーザー詳細</h1>
<div class="container-fluid">
<div class="row justify-content-center">
<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1">

<div class="wrap">
  <div class="panel panel-default" style="margin-bottom: 40px;">
    <ul class="panel-body">
      <li style="text-align: center;"><%= profile_img(@user) %></li>
      <li>ユーザー名：<%= @user.name %></li>
    </ul>
  </div>

  <div style="margin-bottom: 40px;">
    <h2 class="subhead">フォロー一覧</h2>
    <div class="row">
      <% @user.followed_users.each do |user| %>
        <div class="col-md-12 col-sm-12 col-xs-12 ">
          <p><%= profile_img(user) %></p>
          <p><%= user.name %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div style="margin-bottom: 40px;">
    <h2 class="subhead">フォロワー一覧</h2>
    <div class="row">
      <% @user.followers.each do |user| %>
        <div class="container-child col-md-2 col-sm-2 col-xs-12 ">
          <p><%= profile_img(user) %></p>
          <p><%= user.name %></p>
        </div>
      <% end %>
    </div>
  </div>

  <p><%= link_to "ユーザ一覧へ戻る", users_path %></p>
</div>

</div>
</div>
</div>
